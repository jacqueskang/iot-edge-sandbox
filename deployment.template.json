{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "registryCredentials": {
              "default": {
                "username": "$ACR_USERNAME",
                "password": "$ACR_PASSWORD",
                "address": "$ACR_SERVER"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "MetricsCollector": {
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-metrics-collector:1.0",
              "createOptions": {}
            },
            "type": "docker",
            "env": {
              "ResourceId": {
                "value": "$IOT_HUB_RESOURCE_ID"
              },
              "LogAnalyticsWorkspaceId": {
                "value": "$LOG_ANALYTICS_WORKSPACE_ID"
              },
              "LogAnalyticsSharedKey": {
                "value": "$LOG_ANALYTICS_WORKSPACE_KEY"
              },
              "MetricsEndpointsCSV": {
                "value": "http://edgeHub:9600/metrics,http://edgeAgent:9600/metrics"
              }
            },
            "status": "running",
            "restartPolicy": "always",
            "version": "1.0"
          },
          "ObjectDetection": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": { },
            "settings": {
              "image": "${MODULES.ObjectDetection.arm32v7}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "80/tcp": [
                      {
                        "HostPort": "5000"
                      }
                    ]
                  }
                }
              }
            }
          },
          "CameraCapture": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "VIDEO_PATH": {
                "value": "0"
              },
              "SHOW_VIDEO": {
                "value": "True"
              },
              "VERBOSE": {
                "value": "True"
              },
              "IMAGE_PROCESSING_ENDPOINT": {
                "value": "http://ObjectDetection/image"
              },
              "ANNOTATE": {
                "value": "True"
              }
            },
            "settings": {
              "image": "${MODULES.CameraCapture.arm32v7}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5012/tcp": [
                      {
                        "HostPort": "5012"
                      }
                    ]
                  },
                  "Devices": [
                    {
                      "PathOnHost": "/dev/video0",
                      "PathInContainer": "/dev/video0",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            }
          },
          "LedAlert": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.LedAlert}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            }
          },
          "PushButton": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PushButton}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "PushButtonToLedAlert": "FROM /messages/modules/PushButton/outputs/* INTO BrokeredEndpoint(\"/modules/LedAlert/inputs/default\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}